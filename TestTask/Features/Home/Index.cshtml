@model TestTask.Features.Home.ViewModels.HomeViewModel

<style>
    body {
        display: flex;
        justify-content: center; 
        align-items: center; 
        height: 100vh; 
        margin: 0;
    }

    .formularioPrincipal {
        margin: 0 auto;
        padding: 20px;
    }

    .form-container {
        padding: 20px;
        text-align: center;
    }

</style>
<script>
    $(function () {
       
    });
</script>

    <div class="w-100 h-100 formularioPrincipal">
        <div class="row" style="align-content:center;">
            <h1 class="tituloPrincipal">Test Task</h1>
        </div>
        <div class="form-container col-12">
            @using (Html.BeginForm("Iniciar", "Home", System.Web.Mvc.FormMethod.Post))
            {
                <div class="form-group ">
                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Enter your name..." })
                </div>

                <div class="form-group ">
                    @Html.HiddenFor(model => model.Opcion)
                    @Html.DropDownList("Opciones", Model.ListadoOpciones , "-- Selecciona un test --", new { @class = "form-control" })

                </div>

                <button type="submit" class="btn btn-primary">Crear</button>
            }
            @if (Model.Notificacion != null)
            {
                <div class="alert-danger alert">
                    @Model.Notificacion
                </div>
            }
        </div>
    </div>

