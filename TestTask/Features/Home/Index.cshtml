@model TestTask.Features.Home.ViewModels.HomeViewModel

<style>
    #contenedor::before {
        
        background-image: url('https://images.unsplash.com/photo-1434030216411-0b793f4b4173?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80');
        background-repeat: no-repeat;
        background-size: cover;
        filter: blur(10px); /* Aplica el efecto de desenfoque solo a la imagen */
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }
    #contenedor {
        background-image: url('https://images.unsplash.com/photo-1434030216411-0b793f4b4173?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80');
        background-repeat: no-repeat;
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
       
    }
    .formularioPrincipal {
        margin: 0 auto;
        padding: 20px;
        background-color: lightgray;
        max-width: 700px;
        width: 80%;
    }

    .form-container {
        padding: 20px;
        text-align: center;
    }
    input, select {
        width: 300px;
        margin: 12px 0;
        padding: 10px;
        font-size: 20px;
    }
    form {
        width: 100%;
    }
    button {
        margin-top: 20px;
        width: 200px;
    }

</style>
<script>
    $(function () {
      
    });
</script>
<div id="contenedor" class="w-100" >
    <div class=" formularioPrincipal">
        <div class="row" style="align-content:center;">
            <h1 class="tituloPrincipal">Test Task</h1>
        </div>
        <div class="form-container col-12">
            @using (Html.BeginForm("Iniciar", "Home", System.Web.Mvc.FormMethod.Post))
            {
                <div class="form-group ">
                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Enter your name..." })
                </div>

                <div class="form-group ">
                    @Html.DropDownList("Opcion", Model.ListadoOpciones, "Choose a test", new { @class = "form-control" })

                </div>

                <button type="submit" class="btn btn-primary">Start</button>
            }
            @if (Model.Notificacion != null)
            {
                <div class="alert-danger alert">
                    @Model.Notificacion
                </div>
            }
        </div>
    </div>
</div>
