@model TestTask.Features.Home.ViewModels.TestsViewModel

<style>
    .custom-checkbox {
        transition: background-color 0.3s ease-in-out; 
    }

        .custom-checkbox:focus-within, .custom-checkbox:hover {
            background-color: #f0f0f0;
        }

        .custom-checkbox input[type="checkbox"]:checked + span {
            background-color: #007bff; 
            color: #fff;
        }
</style>

<script>
    $(document).ready(function () {

       
        $(".custom-checkbox").click(function () {
            $(this).next().toggleClass("checked");

            var identificador = $(this).val();
            console.log("Checkbox con identificador " + identificador + " ha sido clicado.");
        });
    });
</script>
@using (Html.BeginForm("TestSiguiente", "Home", FormMethod.Post))
{
    <div class="container">
        <h1>@Model.PreguntaActual.Descripcion</h1>



        <div class="button-container">
            @for (var i = 0; i < Model.PreguntaActual.RespuestasPregunta.Count; i++)
            {
                var elem = Model.PreguntaActual.RespuestasPregunta[i];

                <label class="btn btn-checkbox custom-checkbox">
                    <input type="checkbox" name="selectedOptions[@elem.Identificador]" value="@elem.Identificador" autocomplete="off">
                    <span>@elem.Descripcion</span>
                </label>
            }
        </div>

        <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: @Model.PorcentajeProgreso%;"></div>
        </div>

        <button type="submit" class="btn btn-success">Siguiente</button>
       
    </div>
}



