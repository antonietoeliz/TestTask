
<div class="modal fade" id="myModalDelete" tabindex="-1" role="dialog" aria-labelledby="modalTitleDelete" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitleDelete">Eliminar Pregunta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas eliminar esta pregunta?</p>
                <form action="@Url.Action("_DeletePost", "AdminRespuestas")" method="post" class="form-horizontal">
                    <input type="hidden" name="Id" value="@Model.Id" />

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
